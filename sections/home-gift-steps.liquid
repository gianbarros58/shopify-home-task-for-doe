{% schema %}
{
  "name": "Home Gift Steps",
  "settings": [

    { "type": "image_picker", "id": "image", "label": "Background image" },

    { "type": "text", "id": "kicker", "label": "Kicker", "default": "HOW IT WORKS" },
    { "type": "textarea", "id": "title", "label": "Title", "default": "MORE THAN A GIFT.\nIT'S A GESTURE." },
    { "type": "textarea", "id": "subtext", "label": "Subtext", "default": "Leave a lasting impression with homecare gifts that speak volumes-crafted with intention, clean formulations, and custom fragrance blends." },

    { "type": "text", "id": "step_one_heading", "label": "Step 1 Heading", "default": "Choose Your Gift Set" },
    { "type": "textarea", "id": "step_one_description", "label": "Step 1 Description", "default": "Select from our curated bundles or build a custom assortment-perfect for clients, new hires, or team celebrations. Each set is thoughtfully composed with our most loved luxury homecare products." },
    { "type": "text", "id": "step_two_heading", "label": "Step 2 Heading", "default": "Add Your Personal Touch" },
    { "type": "textarea", "id": "step_two_description", "label": "Step 2 Description", "default": "Include a note, custom ribbon, or branded card. Every detail can be tailored to reflect your company's voice and values." },
    { "type": "text", "id": "step_three_heading", "label": "Step 3 Heading", "default": "Gifts That Arrive Ready to Impress" },
    { "type": "textarea", "id": "step_three_description", "label": "Step 3 Description", "default": "Each order is hand-packed with care, beautifully boxed, and shipped directly to your recipients. No extra wrapping needed-just a perfect unboxing experience, every time." },
    { "type": "text", "id": "step_four_heading", "label": "Step 4 Heading", "default": "Cleaner Gifting for a Cleaner Planet" },
    { "type": "textarea", "id": "step_four_description", "label": "Step 4 Description", "default": "Every product is made with non-toxic, vegan, and cruelty-free ingredients-formulated with organic fragrance oils and consciously packaged." },

    { "type": "text", "id": "primary_label", "label": "Primary button label", "default": "INQUIRE NOW" },
    { "type": "url",  "id": "primary_url",   "label": "Primary button link" },
  ],
  "presets": [{ "name": "Home Gift Steps" }]
}
{% endschema %}
